import java.util.Scanner;

public class atv5 {
    
    public static double somaImposto(double taxaImposto, double custo) {
        double imposto = custo * (taxaImposto / 100);
        return custo + imposto;
    }
    
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Digite o custo do item (sem imposto): R$ ");
        double custo = scanner.nextDouble();
        
        System.out.print("Digite a taxa de imposto (%): ");
        double taxaImposto = scanner.nextDouble();
        
        double custoComImposto = somaImposto(taxaImposto, custo);
        
        System.out.printf("\nCusto original: R$ %.2f\n", custo);
        System.out.printf("Taxa de imposto: %.2f%%\n", taxaImposto);
        System.out.printf("Custo com imposto: R$ %.2f\n", custoComImposto);
        
        scanner.close();
    }
}
